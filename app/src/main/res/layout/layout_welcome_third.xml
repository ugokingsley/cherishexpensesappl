<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/background"
    android:background="@color/blue_light">

    <ImageView
        android:id="@+id/iv_credit_card"
        android:layout_width="@dimen/dimen_6_10dp"
        android:layout_height="@dimen/dimen_6_10dp"
        android:layout_marginTop="@dimen/dimen_3_10dp"
        android:contentDescription="@string/credit_card_content_desc"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_credit_card"/>

    <TextView
        android:id="@+id/tv_third_desc"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/third_page_desc"
        style="@style/WelcomeDescription"/>

</LinearLayout>